{
  "name": "@gesslar/hex",
  "displayName": "Hex",
  "description": "Because while you may be valid, your theme is questionable.",
  "version": "0.0.1",
  "publisher": "gesslar",
  "engines": {
    "vscode": ">=1.104.0"
  },
  "repository": "https://github.com/gesslar/Hex",
  "categories": [
    "Other",
    "Themes"
  ],
  "main": "./src/silly-required-cjs-entrypoint.cjs",
  "contributes": {
    "commands": [
      {
        "command": "hex.show",
        "title": "Hex: Show Hex"
      },
      {
        "command": "hex.validate",
        "title": "Validate selected theme file in Hex",
        "icon": "$(symbol-color)"
      },
      {
        "command": "hex.select",
        "title": "Open and validate theme file in Hex",
        "icon": "$(symbol-color)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "hex.validate",
          "group": "HexGroup1@1",
          "when": "isFileSystemResource && !explorerResourceIsFolder && resourceScheme == file &&  resourceFilename =~ /\\.color-theme\\.json$/"
        },
        {
          "command": "hex.select",
          "group": "HexGroup2@1"
        }
      ],
      "explorer/context": [
        {
          "command": "hex.validate",
          "group": "HexGroup@1",
          "when": "isFileSystemResource && !explorerResourceIsFolder && resourceScheme == file &&  resourceFilename =~ /\\.color-theme\\.json$/"
        }
      ]
    }
  },
  "scripts": {
    "update": "pnpm self-update && pnpx npm-check-updates -u && pnpm install"
  },
  "type": "module",
  "dependencies": {
    "@gesslar/toolkit": "^3.31.0",
    "@popperjs/core": "^2.11.8",
    "@vscode/codicons": "^0.0.44",
    "ajv": "^8.17.1",
    "json5": "^2.2.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@gesslar/uglier": "^1.3.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "eslint": "^9.39.2",
    "node-resolve": "^1.3.4",
    "rollup": "^4.57.1"
  }
}
