{
  "name": "hex-theme-validator",
  "displayName": "Hex - VS Code Theme Validator",
  "description": "Because while you may be valid, your theme is questionable.",
  "version": "0.0.2",
  "publisher": "gesslar",
  "license": "Unlicense",
  "engines": {
    "vscode": ">=1.104.0",
    "node": ">=24.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gesslar/Hex"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "vscode",
    "theme",
    "themes",
    "validation",
    "validator",
    "fenny",
    "snake",
    "syntax",
    "highlight",
    "json"
  ],
  "main": "./src/silly-required-cjs-entrypoint.cjs",
  "contributes": {
    "commands": [
      {
        "command": "hex.show",
        "title": "Hex: Show Hex"
      },
      {
        "command": "hex.validate",
        "title": "Validate selected theme file in Hex",
        "icon": "$(symbol-color)"
      },
      {
        "command": "hex.select",
        "title": "Open and validate theme file in Hex",
        "icon": "$(symbol-color)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "hex.validate",
          "group": "HexGroup1@1",
          "when": "isFileSystemResource && !explorerResourceIsFolder && resourceScheme == file &&  resourceFilename =~ /\\.json$/"
        },
        {
          "command": "hex.select",
          "group": "HexGroup2@1"
        }
      ],
      "explorer/context": [
        {
          "command": "hex.validate",
          "group": "HexGroup@1",
          "when": "isFileSystemResource && !explorerResourceIsFolder && resourceScheme == file &&  resourceFilename =~ /\\.json$/"
        }
      ]
    }
  },
  "scripts": {
    "update": "pnpm self-update && pnpx npm-check-updates -u && pnpm install",
    "pr": "gt submit -p --ai",
    "publish:vsce": "bash -e package && xdg-open https://marketplace.visualstudio.com/manage/publishers/gesslar",
    "publish:ovsx": "bash -e package && xdg-open https://open-vsx.org/user-settings/extensions",
    "patch": "pnpm version patch",
    "minor": "pnpm version minor",
    "major": "pnpm version major"
  },
  "icon": "hexagon.png",
  "type": "module",
  "dependencies": {
    "@gesslar/toolkit": "^3.31.0",
    "@vscode/codicons": "^0.0.44",
    "ajv": "^8.17.1",
    "json5": "^2.2.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@gesslar/uglier": "^1.3.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "node-resolve": "^1.3.4",
    "rollup": "^4.57.1"
  }
}
